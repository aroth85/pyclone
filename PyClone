#!/usr/bin/env python

#=======================================================================================================================
# PyClone
# Author : Andrew Roth
#=======================================================================================================================
import argparse

from pyclone.run import run_dp_model 

parser = argparse.ArgumentParser(prog='PyClone')

parser.add_argument('in_file_name',
                    help='Path to tab separated input file. See examples for format.')

parser.add_argument('out_dir',
                    help='Path to directory where output will be written.')

parser.add_argument('--num_iters', default=10000, type=int,
                    help='''How many iterations the MCMC chain will run. Default is 10,000.''')

parser.add_argument('--burnin', default=0, type=int,
                    help='''How many samples from the start of the MCMC chain to discard as burnin. Default 0.''')

parser.add_argument('--thin', default=1, type=int,
                    help='''How many samples to skip before saving one sample into the trace. Default 1.''')

parser.set_defaults(func=run_dp_model)

args = parser.parse_args()

args.func(args)
